<PropertyList>
 <path>lightcone-landing.ac</path>

  <!--Lights-->
 
  <animation>
    <type>noshadow</type>
    <object-name>lightcone-landing</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>lightcone-landing</object-name>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>
  </effect>
  
 <animation>  
   <object-name>lightcone-landing</object-name> 
</animation>


  <!-- working for Rembrandt -->
 

  <animation>
    <type>material</type>
    <object-name>lightcone-landing</object-name>
    <emission>
      <property>sim/multiplay/generic/int[9]</property>
      <red>   0.25 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation> 
 
 
  
<!--Spot lights-->

<animation>
   <type>light</type>
   <light-type>spot</light-type>
   <object-name>lightcone-landing</object-name>
   <nopreview/>
   <position>
     <x>0.0</x>
     <y>0.0</y>
     <z>0.0</z>
   </position>
   <direction>
     <x>0.0</x>
     <y>0.0</y>
     <z>-1.0</z>
   </direction>
   <ambient>
     <r>0.03</r>
     <g>0.03</g>
     <b>0.03</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.6</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.7</b>
     <a>1.0</a>
   </specular>   
   <attenuation>
     <c>1.0</c>
     <l>0.002</l>
     <q>0.00005</q>
   </attenuation>
   <exponent>30.0</exponent>
   <cutoff>10</cutoff>
   <near-m>50</near-m>
   <far-m>300</far-m>
 </animation>

  <animation>
	  <type>select</type>	  
	  <condition>
		  <property>sim/multiplay/generic/int[9]</property>		  
	  </condition>
  </animation>

  </PropertyList> 