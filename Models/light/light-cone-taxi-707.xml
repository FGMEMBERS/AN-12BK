 <PropertyList>
   
   <path>lights-cone-taxi-707.ac</path>
   
   <animation>
     <object-name>Spot</object-name>
     <object-name>Spot.001</object-name>
     <object-name>Spot.002</object-name>
     <object-name>Cone-texture</object-name>
     <object-name>Cone-texture.001</object-name>
     <object-name>Cone-texture.002</object-name>  
   </animation> 
   
<animation>
  <type>select</type>
     <object-name>Spot</object-name>
     <object-name>Spot.001</object-name>
     <object-name>Spot.002</object-name>
     <object-name>Cone-texture</object-name>
     <object-name>Cone-texture.001</object-name>
     <object-name>Cone-texture.002</object-name>
  <condition>
    <and>
    	<not><property>/sim/rendering/rembrandt/enabled</property></not>
	    <property>sim/multiplay/generic/int[10]</property>
    </and>
  </condition>
</animation>
  
  
   <animation>
     <type>material</type>
     <object-name>Spot</object-name>
     <object-name>Spot.001</object-name>
     <object-name>Spot.002</object-name>
     <object-name>Cone-texture</object-name>
     <object-name>Cone-texture.001</object-name>
     <object-name>Cone-texture.002</object-name> 
     <emission>
       <red>   1 </red>
       <green> 1 </green>
       <blue>  1 </blue>
     </emission>
   </animation>



</PropertyList>
