<!-- Engines start panel
3D instrument for Tu-154 -->
<PropertyList>
 <path>ramppanel.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>cover</object-name>
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.5 </red>
      <green> 0.6 </green>
      <blue>  0.6 </blue>
    </emission>
</animation>

<!--Cover-->

<animation>
    <type>rotate</type>
    <object-name>cover</object-name>
    <property>switches/startpanel-cover</property>
    <factor>90.0</factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.1</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
</animation>


<!--Cover-->
<animation>
  <type>pick</type>
  <object-name>cover</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        if( getprop("switches/startpanel-cover" ) == 0.0 )
        	interpolate("switches/startpanel-cover", 1.0, 0.1 );
        else 	interpolate("switches/startpanel-cover", 0.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>

<animation>
  <type>scale</type>
  <object-name>base</object-name>
  <object-name>cover</object-name>    
  <property>sim/signals/fdm-initialized</property>
  <offset>2</offset>
  <x-max>2</x-max>
  <y-max>2</y-max>
  <z-max>2</z-max>
  <x-factor>2</x-factor>
  <y-factor>2</y-factor>
  <z-factor>2</z-factor>
 </animation>

</PropertyList>
