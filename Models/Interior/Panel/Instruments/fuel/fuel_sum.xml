<PropertyList>
 <path>fuel_sum.ac</path>


  <!--Lights-->
                                   
 <animation>   
   <object-name>fuel_s</object-name>
   <object-name>n1</object-name>    
 </animation>


  <!-- working for Rembrandt -->
  

  <animation>
    <type>material</type>
    <object-name>fuel_s</object-name>
   <object-name>n1</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
 
 
<!--fuel sum of all tanks in kg -->
 
 <animation>
  <type>rotate</type>
  <object-name>n1</object-name>
  <property>consumables/fuel/total-fuel-kg</property>
  <interpolation>
   <entry><ind>  0.0</ind><dep> 0.0 </dep></entry> 

   <entry><ind> 10000</ind><dep>  300</dep></entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 

 
 
 
 </PropertyList>

